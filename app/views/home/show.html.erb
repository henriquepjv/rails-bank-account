<div class="container mx-auto">
  <div class='block text-center'>
    <h1 class='font-mono text-2xl pb-8'>GIA Auth Sample for Bank Account Mock</h1>
    <% if @user.present? %>
      <%= button_to 'Dashboard', dashboard_path, method: :get, data: { turbo: false }, class: "text-white bg-gradient-to-r from-cyan-500 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-cyan-300 dark:focus:ring-cyan-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2" %>
    <% else %>
      <%= form_tag('/auth/gia', method: 'post', data: {turbo: false}) do %>
        <button type='submit', class = "text-white bg-gradient-to-r from-cyan-500 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-cyan-300 dark:focus:ring-cyan-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2" >
          Login with Developer
        </button>
      <% end %>
    <% end %>
  </div>
</div>
